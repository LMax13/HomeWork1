/*
Написать программу, вычисляющую и отображающую все числа Фибоначчи меньше введённого пользователем целого числа.
Решить двумя способами: с помощью цикла и с помощью рекурсии.
 */
public class HomeWork2 {
    public static void main(String[] args) {
        int number = 1346269;
        int result = fibonacci(number);
        System.out.println(" из числа " + number + ".");
    }

    public static int Fibonacci(int number) {
        int result = 0;
        int number1 = 0;
        int number2 = 1;
        int fibonacci;
        System.out.print("Все числа Фибоначчи: " + number1 + "," + number2 + ",");
        for (int i = 0; i <= number - number1; i = fibonacci) {
            fibonacci = number1 + number2;
            number1 = number2;
            number2 = fibonacci;
            System.out.print(fibonacci + ",");
        }
        return result;
    }
}
